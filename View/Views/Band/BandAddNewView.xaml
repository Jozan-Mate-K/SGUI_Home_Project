<UserControl x:Class="SGUI_Home_Project.Views.BandAddNewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SGUI_Home_Project.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Margin="5"  Background="DarkRed">
            <Label FontSize="20" Margin="10" Foreground="White"  Content="Name:"/>
            <TextBox 
                    Margin="10 0"
                    TextChanged="changeEventHandler"
                    x:Name="name" 
                    Text="{Binding Name}"/>
            <TextBox Margin="10 20"
                     TextChanged="changeEventhandler"
                     x:Name="Balance"
                     Text="{Binding Balance}"/>
            
            <Button Margin="10 10" Content="Add new Band" Command="{Binding AddCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
